<h1>Create a new user</h1>
<br>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message|%>\
     <h3><%= message %> </h3>
  <%end%>
<%end%>
<br>

<%= form_for @user, :validate => true do |f| %>
  username: <%= f.text_field :username, :placeholder =>  'Your user name here' %>
  email : <%= f.email_field :email, :placeholder =>  'user@domain.com' %>
  password : <%= f.password_field :password %>
  <%= f.submit("Submit") %>
<% end %>

